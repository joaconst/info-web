---
const pageTypes = [
  { title: 'Tipo 1', image: 'https://via.placeholder.com/400x300' },
  { title: 'Tipo 2', image: 'https://via.placeholder.com/400x300' },
  { title: 'Tipo 3', image: 'https://via.placeholder.com/400x300' },
  { title: 'Tipo 4', image: 'https://via.placeholder.com/400x300' },
];
---
<section id="contacto" class="pl-0 lg:pl-64 bg-gray-50">
  <div class="p-8 h-full flex flex-col justify-center">
    <h2 class="text-3xl lg:text-4xl font-bold text-primary mb-12" data-aos="fade-down">TIPOS DE P√ÅGINAS</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {pageTypes.map((type, index) => (
        <div 
          class="bg-white p-4 rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300"
          data-aos="flip-left"
          data-aos-delay={index * 100}
        >
          <img src={type.image} alt={type.title} class="w-full h-48 object-cover rounded-lg mb-4" />
          <h3 class="font-bold text-lg">{type.title}</h3>
        </div>
      ))}
    </div>
  </div>
</section>