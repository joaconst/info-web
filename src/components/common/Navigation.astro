---
import '../../styles/nav.css'
---

<header class="fixed top-0 left-0 right-0 h-16 z-50 flex items-center justify-between px-10">
  <!-- Logo -->
  <a href="#" class="text-2xl font-bold text-black flex items-center space-x-2">
    <span>LOGO</span>
  </a>

  <!-- Menú para desktop -->
  <nav class="hidden md:flex items-center space-x-8">
    <a href="/" class="text-black font-medium transition-all duration-300 hover:scale-105 relative group">
      INICIO
      <span class="absolute bottom-[-2px] left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href="/#nosotros" class="text-black font-medium transition-all duration-300 hover:scale-105 relative group">
      NOSOTROS  
      <span class="absolute bottom-[-2px] left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href="/servicios" class="text-black font-medium transition-all duration-300 hover:scale-105 relative group">
      SERVICIOS
      <span class="absolute bottom-[-2px] left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href="/contacto" class="text-black font-medium transition-all duration-300 hover:scale-105 relative group">
      CONTACTO
      <span class="absolute bottom-[-2px] left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
    </a>
  </nav>

  <!-- Botón hamburguesa para móvil -->
  <button id="mobile-menu-button" class="md:hidden focus:outline-none">
    <span class="block w-6 h-0.5 bg-black transition-all duration-300 ease-in-out"></span>
    <span class="block w-6 h-0.5 bg-black mt-1 transition-all duration-300 ease-in-out"></span>
    <span class="block w-6 h-0.5 bg-black mt-1 transition-all duration-300 ease-in-out"></span>
  </button>
</header>

<!-- Menú móvil desplegable -->
<nav id="mobile-menu" class="fixed top-16 left-0 right-0 z-50 menu-hidden">
  <ul class="flex flex-col space-y-4 p-4">
    <li>
      <a href="/" class="text-black font-medium transition-all duration-300 hover:scale-105">
        INICIO
      </a>
    </li>
    <li>
      <a href="/#nosotros" class="text-black font-medium transition-all duration-300 hover:scale-105">
        NOSOTROS
      </a>
    </li>
    <li>
      <a href="/servicios" class="text-black font-medium transition-all duration-300 hover:scale-105">
        SERVICIOS
      </a>
    </li>
    <li>
      <a href="/contacto" class="text-black font-medium transition-all duration-300 hover:scale-105">
        CONTACTO
      </a>
    </li>
  </ul>
</nav>

<script>
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    const menuButton = document.getElementById('mobile-menu-button');
  
    menuButton?.classList.toggle('open');
  
    if (!mobileMenu) return;
  
    if (mobileMenu.classList.contains('menu-hidden')) {
      mobileMenu.classList.remove('menu-hidden', 'menu-leave');
      mobileMenu.classList.add('menu-visible');
    } else {
      mobileMenu.classList.remove('menu-visible');
      mobileMenu.classList.add('menu-leave');
      setTimeout(() => {
        mobileMenu.classList.remove('menu-leave');
        mobileMenu.classList.add('menu-hidden');
      }, 300);
    }
  });
  
  // Solución para el enlace "NOSOTROS"
  document.querySelectorAll('a[href="/#nosotros"]').forEach(link => {
    link.addEventListener('click', (e) => {
      if (window.location.pathname === "/") {
        e.preventDefault();
        const target = document.getElementById('nosotros');
        if (target) {
          target.scrollIntoView({ behavior: "smooth" });
        }
      }
    });
  });
  
  // Cierra el menú móvil al hacer clic en un enlace
  document.querySelectorAll('#mobile-menu a').forEach(link => {
    link.addEventListener('click', () => {
      document.getElementById('mobile-menu')?.classList.add('menu-hidden');
    });
  });
  </script>
  