<header class="sticky mt-4 h-16 flex items-center justify-between px-4 md:justify-center md:gap-8">
  <!-- Logo -->
  <a href="#" class="text-2xl font-bold text-black flex items-center space-x-2">
    <span>LOGO</span>
  </a>

  <!-- Botón Hamburguesa (Mobile) -->
  <button id="menuBtn" class="p-2 md:hidden">
    <div class="w-6 h-0.5 bg-black mb-1 transition-all duration-300"></div>
    <div class="w-6 h-0.5 bg-black mb-1 transition-all duration-300"></div>
    <div class="w-6 h-0.5 bg-black transition-all duration-300"></div>
  </button>

  <!-- Menú para desktop (Mismo que original) -->
  <nav class="hidden md:flex items-center space-x-8 p-3 bg-white rounded-full shadow-lg shadow-black/50">
    <a href="/" class="text-black font-medium transition-all duration-300 hover:scale-105 relative group">
      INICIO
      <span class="absolute bottom-[-2px] left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href="/#nosotros" class="text-black font-medium transition-all duration-300 hover:scale-105 relative group">
      NOSOTROS  
      <span class="absolute bottom-[-2px] left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href="/servicios" class="text-black font-medium transition-all duration-300 hover:scale-105 relative group">
      SERVICIOS
      <span class="absolute bottom-[-2px] left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
    </a>
    <a href="/contacto" class="text-black font-medium transition-all duration-300 hover:scale-105 relative group">
      CONTACTO
      <span class="absolute bottom-[-2px] left-0 w-0 h-0.5 bg-primary transition-all duration-300 group-hover:w-full"></span>
    </a>
  </nav>

  <!-- Menú Mobile -->
  <div id="mobileMenu" class="hidden md:hidden absolute top-16 left-0 w-full bg-white shadow-lg py-4 px-6">
    <div class="flex flex-col space-y-4">
      <a href="/" class="text-black font-medium py-2 hover:text-primary transition-all">INICIO</a>
      <a href="/#nosotros" class="text-black font-medium py-2 hover:text-primary transition-all">NOSOTROS</a>
      <a href="/servicios" class="text-black font-medium py-2 hover:text-primary transition-all">SERVICIOS</a>
      <a href="/contacto" class="text-black font-medium py-2 hover:text-primary transition-all">CONTACTO</a>
    </div>
  </div>
</header>

<script>
// Mismo script que antes
const menuBtn = document.getElementById('menuBtn');
const mobileMenu = document.getElementById('mobileMenu');
const bars = menuBtn.querySelectorAll('div');

let menuOpen = false;

menuBtn.addEventListener('click', () => {
  menuOpen = !menuOpen;
  
  bars[0].style.transform = menuOpen ? 'rotate(45deg) translate(4px, 6px)' : '';
  bars[1].style.opacity = menuOpen ? '0' : '1';
  bars[2].style.transform = menuOpen ? 'rotate(-45deg) translate(4px, -6px)' : '';
  
  mobileMenu.classList.toggle('hidden');
});

document.querySelectorAll('#mobileMenu a').forEach(link => {
  link.addEventListener('click', () => {
    mobileMenu.classList.add('hidden');
    menuOpen = false;
    bars.forEach(bar => {
      bar.style.transform = '';
      bar.style.opacity = '1';
    });
  });
});
</script>