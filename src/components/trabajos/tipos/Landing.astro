---
interface Props {
    title?: string;
}

const { title = "Landing Pages" } = Astro.props;
---

<!-- Landing -->
<section 
    id="landing" 
    class="mt-12"
    aria-labelledby="landing-title"
    itemscope 
    itemtype="http://schema.org/CreativeWork"
>
    <article>
        <h2 
            id="landing-title" 
            class="text-3xl font-bold text-gray-900 text-center mb-4"
            itemprop="name"
        >
            {title}
        </h2>

        <!-- Descripción -->
        <div
            class="lg:col-span-2 flex flex-col items-center justify-center mb-4"
            itemprop="description"
        >
            <p class="text-lg text-gray-600 mb-4">
                Página de aterrizaje optimizada para conversiones, con diseño
                atractivo, llamadas a la acción estratégicas y formularios de
                contacto optimizados.
            </p>
            <div
                class="flex flex-wrap gap-4 [&>span]:hover:bg-primary/25 [&>span]:transition-all [&>span]:duration-300"
                role="list"
                aria-label="Características principales"
            >
                <span
                    class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm"
                    role="listitem"
                    itemprop="keywords"
                >
                    Alta Conversión
                </span>
                <span
                    class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm"
                    role="listitem"
                    itemprop="keywords"
                >
                    Diseño Impactante
                </span>
                <span
                    class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm"
                    role="listitem"
                    itemprop="keywords"
                >
                    Formularios Optimizados
                </span>
                <span
                    class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm"
                    role="listitem"
                    itemprop="keywords"
                >
                    Mobile First
                </span>
            </div>
        </div>

        <!-- Card Principal -->
        <div
            class="bg-white w-full h-[400px] rounded-2xl shadow-lg overflow-hidden"
            role="region"
            aria-label="Galería de proyectos"
        >
            <div 
                class="grid grid-cols-2 md:grid-cols-4 h-full p-2 gap-2"
                role="list"
                aria-label="Lista de proyectos"
            >
                <!-- Card 1 -->
                <div 
                    class="relative overflow-hidden border rounded-2xl"
                    role="listitem"
                    itemscope 
                    itemtype="http://schema.org/WebSite"
                >
                    <div class="absolute inset-0">
                        <p class="text-center font-bold text-xl mt-4">Se el primero</p>
                        <div class="absolute bottom-0 left-0 right-0 p-4">
                            <a
                                href="/contacto"
                                rel="noopener noreferrer"
                                class="inline-block px-4 py-2 bg-white text-gray-800 rounded-full font-semibold text-sm border border-gray-200 hover:bg-primary/50 transition-all duration-300"
                                aria-label="Ver detalles del proyecto"
                                itemprop="url"
                            >
                                Contactanos
                            </a>
                        </div>
                    </div>
                </div>

