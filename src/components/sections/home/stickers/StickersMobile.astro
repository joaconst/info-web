<section
    id="anim-mobile-section"
    class="relative lg:hidden flex items-center justify-center w-screen min-h-[50vh] bg-primary mt-32 px-4 overflow-hidden"
>
    <!-- Componente de fondo -->
    <div class="animated-bg absolute inset-0 pointer-events-none">
        <div class="bg-element bg-element-1" data-text="Adaptable"></div>
        <div class="bg-element bg-element-2" data-text="Rápido"></div>
        <div class="bg-element bg-element-3" data-text="Seguro"></div>
        <div class="bg-element bg-element-4" data-text="Optimizado"></div>
    </div>

    <!-- Botón principal -->
    <button
        class="animated-rectangle relative z-10 cursor-pointer w-full max-w-[280px] h-[50px] bg-white border-4 border-[#d9d9d9] rounded-[50px] shadow-[8px_8px_0_0_#d9d9d9] overflow-hidden transition-all duration-300 ease-in-out"
        data-text="Impulsa tu presencia digital"
    >
        <span
            class="cursor absolute right-2 top-1/2 transform -translate-y-1/2 w-[2px] h-6 bg-black opacity-0 rounded-full"
        ></span>
    </button>
</section>

<style>
    /* Estado animado del botón principal */
    .animated-rectangle.animate {
        transform: translate(-2px, -2px);
        box-shadow: 10px 10px 0 #000;
    }

    .animated-rectangle::before {
        content: attr(data-text);
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        font-family: "Courier New", monospace;
        font-size: 14px;
        color: #000;
        width: 0;
        overflow: hidden;
        white-space: nowrap;
        pointer-events: none;
    }

    .animated-rectangle::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #000;
        transform: translateX(-100%);
        z-index: -1;
    }

    .animated-rectangle.animate::before {
        animation: typing 2s steps(30, end) forwards;
    }

    .animated-rectangle.animate::after {
        animation: slide 1.5s ease-in-out forwards;
    }

    .animated-rectangle.animate .cursor {
        opacity: 1;
    }

    @keyframes typing {
        from {
            width: 0;
        }
        to {
            width: calc(100% - 24px);
        }
    }

    @keyframes slide {
        to {
            transform: translateX(100%);
        }
    }

    @keyframes blink {
        50% {
            opacity: 0;
        }
    }

    .cursor {
        animation: blink 1.5s step-end infinite;
    }

    /* Componente de fondo */
    .animated-bg {
        z-index: 0;
    }

    .bg-element {
        --input-bg: rgba(255, 255, 255, 0.1);
        --padding: 1.5em;
        --rotate: 80deg;
        --gap: 2em;
        --icon-change-color: #15A986;
        --height: 36px;
        
        position: absolute;
        width: 160px;
        height: var(--height);
        background: var(--input-bg);
        border: 2px solid rgba(217, 217, 217, 0.5);
        border-radius: 4px;
        opacity: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-inline-end: 1em;
        transition: all 0.3s cubic-bezier(.4,0,.2,1);
    }

    .bg-element::before {
        content: attr(data-text);
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        color: rgba(255, 255, 255, 0.85);
        font-family: "Courier New", monospace;
        font-size: 11px;
        pointer-events: none;
        width: 0;
        overflow: hidden;
        white-space: nowrap;
        text-align: center;
    }

    .bg-element::after {
        content: "";
        position: absolute;
        right: calc(var(--padding) - var(--gap));
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        transition: 0.3s;
        opacity: 0;
        transform: scale(0);
        visibility: hidden;
    }

    .bg-element:hover::after {
        opacity: 1;
        visibility: visible;
        transform: scale(1);
    }

    @keyframes fadeInSlide {
        0% {
            opacity: 0;
            transform: translateY(20px);
        }
        100% {
            opacity: 0.7;
            transform: translateY(0);
        }
    }

    @keyframes typeText {
        from {
            width: 0;
        }
        to {
            width: 100%;
        }
    }

    /* Posiciones para móvil */
    .bg-element-1 {
        top: 10%;
        left: 5%;
        animation: fadeInSlide 2s ease forwards;
        animation-delay: 0.3s;
    }

    .bg-element-2 {
        bottom: 10%;
        left: 5%;
        animation: fadeInSlide 2s ease forwards;
        animation-delay: 1s;
    }

    .bg-element-3 {
        bottom: 20%;
        right: 5%;
        animation: fadeInSlide 2s ease forwards;
        animation-delay: 0.6s;
    }

    .bg-element-4 {
        bottom: 10%;
        right: 5%;
        animation: fadeInSlide 2s ease forwards;
        animation-delay: 1.3s;
    }

    /* Animaciones de texto */
    .bg-element-1::before {
        animation: typeText 1.8s steps(10, end) forwards;
        animation-delay: 0.8s;
    }

    .bg-element-2::before {
        animation: typeText 1.5s steps(7, end) forwards;
        animation-delay: 1.5s;
    }

    .bg-element-3::before {
        animation: typeText 1.5s steps(7, end) forwards;
        animation-delay: 1.1s;
    }

    .bg-element-4::before {
        animation: typeText 2s steps(11, end) forwards;
        animation-delay: 1.8s;
    }

    /* Ajustes para diferentes tamaños de móvil */
    @media (min-width: 360px) {
        .bg-element {
            width: 170px;
            height: 38px;
        }
        .bg-element::before {
            font-size: 12px;
        }
        .animated-rectangle {
            max-width: 290px;
            height: 48px;
        }
        .animated-rectangle::before {
            font-size: 14px;
            left: 8px;
        }
    }

    @media (min-width: 400px) {
        .bg-element {
            width: 180px;
            height: 40px;
        }
        .bg-element::before {
            font-size: 13px;
        }
        .animated-rectangle {
            max-width: 300px;
            height: 50px;
        }
        .animated-rectangle::before {
            font-size: 15px;
            left: 10px;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const section = document.getElementById("anim-mobile-section");
        if (!section) {
            console.error("Sección no encontrada");
            return;
        }

        const animatedRect = section.querySelector(".animated-rectangle");
        if (!animatedRect) {
            console.error("Botón animado no encontrado");
            return;
        }

        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        animatedRect.classList.add("animate");
                        console.log("Animación activada");
                        observer.unobserve(entry.target);
                    }
                });
            },
            { threshold: 0.3 }
        );

        observer.observe(section);
    });
</script>
