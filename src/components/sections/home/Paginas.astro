<!-- Contenedor principal -->
<section class="min-h-screen flex items-center justify-center bg-background_pages py-16 px-4 sm:px-6 lg:px-8">
    <!-- Contenedor responsive -->
    <div class="w-full max-w-7xl mx-auto">
        <!-- Grid de tarjetas -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
            <!-- Tarjeta Izquierda -->
            <article class="relative group w-full h-[28rem] sm:h-[30rem] bg-third rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform md:scale-90 md:hover:scale-95">
                <!-- Franja superior -->
                <div class="absolute top-0 left-0 w-full h-14 bg-white flex items-center justify-center">
                    <h3 class="text-black font-bold text-xs sm:text-sm px-2">
                        3 TIENDA ONLINE (E-COMMERCE)
                    </h3>
                </div>

                <!-- Contenido -->
                <div class="h-full flex flex-col justify-between pt-14 pb-4">
                    <div class="flex-grow flex items-center justify-center">
                        <span class="text-white text-xl sm:text-2xl font-bold"> </span>
                    </div>
                    <button class="mx-4 py-3 bg-black text-white font-semibold rounded-md text-sm sm:text-base hover:bg-opacity-80 transition-colors">
                        VER MÁS
                    </button>
                </div>
            </article>

            <!-- Tarjeta Central (destacada) -->
            <article class="relative group w-full h-[28rem] sm:h-[30rem] bg-third rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform md:scale-105 md:hover:scale-110 order-first lg:order-none">
