<section
    id="section"
    class="relative w-full min-h-[80vh] md:min-h-screen overflow-hidden px-4"
>
    <article class="absolute inset-0 flex items-center justify-center py-8">
        <h2
            class="text-black text-4xl sm:text-5xl md:text-7xl lg:text-8xl xl:text-9xl font-extrabold text-center leading-tight md:leading-normal"
            id="section-title"
        >
            DISEÑO ÚNICO, <br class="hidden sm:block" />
            SIN SUSCRIPCIONES, <br class="hidden sm:block" />
            100% TUYA.
        </h2>
    </article>
</section>

<style>
    /* Animación personalizada */
    @keyframes slide-in-up {
        0% {
            transform: translateY(100%);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Estado inicial */
    #section-title {
        opacity: 0;
        transform: translateY(20%);
    }

    /* Clase activadora */
    .animate-slide-in-up {
        animation: slide-in-up 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94)
            forwards;
    }

    /* Asegurar visibilidad */
    #section {
        overflow: visible !important;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
      const section = document.getElementById('section');
      const title = document.getElementById('section-title');
  
      if (section && title) {
        const observer = new IntersectionObserver((entries: IntersectionObserverEntry[]) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              title.classList.add('animate-slide-in-up');
            }
          });
        }, { threshold: 0.5 });
  
        observer.observe(section);
      }
    });
  </script>

