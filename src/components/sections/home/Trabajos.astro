---

<section
    class="min-h-screen py-16 max-w-5xl xl:max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 mb-8 text-center"
>
    <h2 class="text-4xl lg:text-5xl xl:text-6xl font-extrabold mb-8 sm:mb-12">
        Plantillas y Trabajos
    </h2>
    <article
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 h-full mb-12"
    >
        <!-- E-commerce -->
        <a
            href="#"
            class="h-[300px] sm:h-[400px] lg:h-[625px] lg:row-span-2 bg-white rounded-3xl overflow-hidden group relative"
        >
            <img
                src="/images/ecommerce.jpg"
                alt="E-commerce"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"
            >
                <div
                    class="absolute bottom-0 left-0 right-0 p-4 sm:p-6 text-white"
                >
                    <h3 class="text-xl sm:text-2xl font-bold mb-2">
                        E-commerce
                    </h3>
                    <p class="text-base sm:text-lg">Plantilla de e-commerce</p>
                </div>
            </div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="bg-white/90 text-black font-semibold px-6 py-3 rounded-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                    Ver Demo
                </span>
            </div>
        </a>

        <!-- Landing Page -->
        <a
            href="https://landding-page-1.vercel.app/"
            target="_blank"
            class="h-[300px] sm:h-[400px] lg:h-[300px] lg:col-span-2 bg-white rounded-3xl overflow-hidden group relative"
        >
            <img
                src="/images/landing.jpg"
                alt="Landing Page"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"
            >
                <div
                    class="absolute bottom-0 left-0 right-0 p-4 sm:p-6 text-white"
                >
                    <h3 class="text-xl sm:text-2xl font-bold mb-2">
                        Landing Pages
                    </h3>
                    <p class="text-base sm:text-lg">
                        Plantilla de landing page
                    </p>
                </div>
            </div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="bg-white/90 text-black font-semibold px-6 py-3 rounded-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                    Ver Demo
                </span>
            </div>
        </a>

        <!-- Corporativas -->
        <a
            href="https://web-site-pied-eight.vercel.app/"
            target="_blank"
            class="h-[300px] sm:h-[400px] lg:h-[300px] bg-white rounded-3xl overflow-hidden group relative"
        >
            <img
                src="/images/corporativa.jpg"
                alt="Web Corporativa"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"
            >
                <div
                    class="absolute bottom-0 left-0 right-0 p-4 sm:p-6 text-white"
                >
                    <h3 class="text-xl sm:text-2xl font-bold mb-2">
                        Webs Corporativas
                    </h3>
                    <p class="text-base sm:text-lg">
                        Plantilla de web corporativa
                    </p>
                </div>
            </div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="bg-white/90 text-black font-semibold px-6 py-3 rounded-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                    Ver Demo
                </span>
            </div>
        </a>

        <!-- Blogs -->
        <a
            class="h-[300px] sm:h-[400px] lg:h-[300px] bg-white rounded-3xl overflow-hidden group relative"
        >
            <img
                src="/images/blog.jpg"
                alt="Blog"
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div
                class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"
            >
                <div
                    class="absolute bottom-0 left-0 right-0 p-4 sm:p-6 text-white"
                >
                    <h3 class="text-xl sm:text-2xl font-bold mb-2">Blogs</h3>
                    <p class="text-base sm:text-lg">
                        Plantilla de blog/portfolio
                    </p>
                </div>
            </div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <span class="bg-white/90 text-black font-semibold px-6 py-3 rounded-full transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                    Ver Demo
                </span>
            </div>
        </a>
    </article>

    <a
        href="/trabajos"
        role="button"
        aria-label="Ver Trabajos Realizados"
        class="inline-block bg-primary hover:bg-primary/90 transition-all duration-300 uppercase text-white font-semibold rounded-full px-6 py-3 md:px-8 md:py-4 text-sm sm:text-base md:text-lg shadow-lg hover:shadow-xl shadow-primary/30 hover:shadow-primary/40"
    >
        TRABAJOS REALIZADOS
    </a>
</section>
