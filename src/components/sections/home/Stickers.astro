---
import "../../../styles/stickers.css";
---

<section
  id="anim-section"
  class="relative flex items-center justify-center w-screen min-h-[50vh] bg-primary mt-32 px-4 overflow-hidden"
>
  <div class="animated-bg absolute inset-0 pointer-events-none">
    <!-- bg-elements -->
    <div class="bg-element bg-element-1" data-text="Responsive"></div>
    <div class="bg-element bg-element-2" data-text="Moderno"></div>
    <div class="bg-element bg-element-3" data-text="SEO"></div>
    <div class="bg-element bg-element-4" data-text="RÃ¡pido"></div>
    <div class="bg-element bg-element-5" data-text="Seguro"></div>
    <div class="bg-element bg-element-6" data-text="Personalizable"></div>
    <div class="bg-element bg-element-7" data-text="Escalable"></div>
    <div class="bg-element bg-element-8" data-text="Profesional"></div>
    <div class="bg-element bg-element-9" data-text="Accesible"></div>
    <div class="bg-element bg-element-10" data-text="Funcional"></div>
  </div>

  <button
    class="animated-rectangle relative z-10 cursor-pointer w-full max-w-[440px] h-[60px] bg-white border-4 border-[#d9d9d9] rounded-[50px] shadow-[8px_8px_0_0_#d9d9d9] overflow-hidden transition-all duration-300 ease-in-out"
    data-text="Impulsa tu negocio online"
  >
    <span
      class="cursor absolute right-2 top-1/2 transform -translate-y-1/2 w-[2px] h-6 bg-black opacity-0 rounded-full"
    ></span>
  </button>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function() {
    const section = document.getElementById("anim-section");
    if (!section) return;

    // Bloqueo inicial de elementos
    const bgElements = section.querySelectorAll(".bg-element");
    bgElements.forEach(element => {
      element.style.cssText = "opacity:0 !important; visibility:hidden !important;";
    });

    const animatedRect = section.querySelector(".animated-rectangle");
    
    const observer = new IntersectionObserver(([entry]) => {
      if (entry?.isIntersecting) {
        // Resetear estilos forzados
        bgElements.forEach(element => element.style.cssText = "");
        
        requestAnimationFrame(() => {
          // Reiniciar animaciones
          animatedRect.classList.remove("animate");
          bgElements.forEach(el => el.classList.remove("animate"));
          
          void section.offsetWidth; // Trigger reflow
          
          // Activar animaciones
          animatedRect.classList.add("animate");
          bgElements.forEach(el => el.classList.add("animate"));
        });
      }
    }, { threshold: 0.1 });

    observer.observe(section);
  });
</script>