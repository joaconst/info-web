---
const titleText = "Desarrollo Web Profesional";
const seoText = "optimizados para SEO";
const responsiveText = "dise침os responsive";
---

<section class="text-center px-4 py-8 sm:py-12 md:py-16 lg:py-20 space-y-4 sm:space-y-6">
  <div class="max-w-xs sm:max-w-xl md:max-w-3xl lg:max-w-5xl mx-auto space-y-4 sm:space-y-6">
    <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extrabold mb-2 sm:mb-4 text-white drop-shadow-lg">
      <span class="wave-text inline-block relative" data-text={titleText}>
        {titleText}
      </span>
      <br />
      Para impulsar tu negocio
    </h1>

    <div class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-600 max-w-xs sm:max-w-xl md:max-w-2xl mx-auto leading-snug sm:leading-relaxed">
      <p>
        Creamos sitios web
        <span class="underline-animation" data-text={seoText}>
          {seoText}
        </span>
        y
        <span class="underline-animation" data-text={responsiveText}>
          {responsiveText}
        </span>
        que generan m치s clientes para tu negocio.
      </p>
    </div>
  </div>

  <div class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 mt-6 sm:mt-8">
    <a
      href="/contacto"
      role="button"
      aria-label="Solicitar presupuesto gratuito"
      class="inline-block bg-primary hover:bg-primary/90 transition-all duration-300 uppercase text-white font-semibold rounded-full px-5 py-2 sm:px-6 sm:py-3 md:px-8 md:py-4 text-sm sm:text-base md:text-lg shadow-lg hover:shadow-xl shadow-primary/30 hover:shadow-primary/40"
    >
      Solicitar Presupuesto
    </a>
  </div>
</section>

<style>
  .wave-text {
    position: relative;
    display: inline-block;
    color: transparent;
    -webkit-text-stroke: 1px black;
  }

  .wave-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: var(--color-primary);
    clip-path: circle(0% at var(--mouse-x, 50%) var(--mouse-y, 50%));
    pointer-events: none;
    -webkit-text-stroke: 0px transparent;
  }

  .wave-text.animate::after {
    animation: waveExpand 0.8s ease-out forwards;
  }

  @keyframes waveExpand {
    0% {
      clip-path: circle(0% at var(--mouse-x, 50%) var(--mouse-y, 50%));
    }
    70% {
      clip-path: circle(150% at var(--mouse-x, 50%) var(--mouse-y, 50%));
    }
    100% {
      clip-path: circle(150% at var(--mouse-x, 50%) var(--mouse-y, 50%));
    }
  }

    .underline-animation {
    position: relative;
    display: inline-block;
  }

  .underline-animation::after {
    content: "";
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--color-primary);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .underline-animation.active::after {
    transform: scaleX(1);
  }

  @media (max-width: 640px) {
    .wave-text {
      -webkit-text-stroke: 0px transparent;
      color: white;
      font-size: 2.25rem;
      -webkit-text-stroke: 0px transparent;
      color: white;
    }
        
    .underline-animation::after {
      bottom: -2px;
      height: 1.5px;
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    .wave-text {
      -webkit-text-stroke: 0.5px black;
    }
  }
</style>

<script>
  // Animaci칩n wave con tipos TypeScript
  document.querySelectorAll<HTMLElement>(".wave-text").forEach((el) => {
    el.addEventListener("mousemove", (e: MouseEvent) => {
      const rect = el.getBoundingClientRect();
      el.style.setProperty("--mouse-x", `${e.clientX - rect.left}px`);
      el.style.setProperty("--mouse-y", `${e.clientY - rect.top}px`);
    });

    el.addEventListener("mouseenter", () => el.classList.add("animate"));
    el.addEventListener("mouseleave", () => el.classList.remove("animate"));
  });

  // Animaci칩n subrayado con tipos TypeScript
  document
    .querySelectorAll<HTMLElement>(".underline-animation")
    .forEach((el) => {
      el.addEventListener("mouseenter", () => el.classList.add("active"));
      el.addEventListener("mouseleave", () => el.classList.remove("active"));
    });
</script>
