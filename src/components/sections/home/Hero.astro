<section id="inicio" class="relative w-full h-screen overflow-hidden bg-black">
  <!-- Imagen de fondo -->
  <picture class="absolute inset-0 z-0">
    <img
      src="home/hero.webp"
      alt=""
      class="w-full h-full object-cover object-center"
      id="hero-img"
      loading="eager"
    >
  </picture>

  <!-- Contenido -->
  <article
    id="hero-content"
    class="absolute inset-0 flex flex-col items-center justify-center z-20 overflow-visible space-y-8 text-white"
  >
    <div class="relative w-full max-w-screen-xl px-4">
      <h1
        class="text-5xl md:text-8xl xl:text-9xl font-bold text-center mx-auto animate-slide-in-left"
        style="text-shadow: 3px 3px 8px rgba(0,0,0,0.8);"
      >
        Tu negocio, tu web
      </h1>
    </div>
    <button
      class="bg-buttons px-20 py-4 text-xl font-medium rounded-lg border-4 border-black animate-slide-in-left"
      style="text-shadow: 1px 1px 4px rgba(0,0,0,0.8);"
    >
      Cont√°ctate con nosotros
    </button>
  </article>
</section>

<style>
  @keyframes slide-in-left {
    0% {
      transform: translateX(-100%);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .animate-slide-in-left {
    animation: slide-in-left 1s ease-out forwards;
  }

  /* Aseguramos visibilidad */
  #hero-content, #hero-content > div {
    overflow: visible !important;
  }
</style>