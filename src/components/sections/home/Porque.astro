<style>
  /* Ajustes responsive para wave-text */
  @media (max-width: 640px) {
    .wave-text {
      font-size: 2.25rem;
      -webkit-text-stroke: 0px transparent;
    }
    
    .underline-animation::after {
      bottom: -2px;
      height: 1.5px;
    }
  }

  @media (min-width: 641px) and (max-width: 1024px) {
    .wave-text {
      -webkit-text-stroke: 0.5px currentColor;
    }
  }
</style>

<script>
  // Animación wave mejorada para touch
  document.querySelectorAll<HTMLElement>('.wave-text').forEach(el => {
    const handleInteraction = (e: MouseEvent | TouchEvent) => {
      const rect = el.getBoundingClientRect();
      const clientX = 'touches' in e ? e.touches[0].clientX : e.clientX;
      const clientY = 'touches' in e ? e.touches[0].clientY : e.clientY;
      
      el.style.setProperty('--mouse-x', `${clientX - rect.left}px`);
      el.style.setProperty('--mouse-y', `${clientY - rect.top}px`);
    };

    el.addEventListener('mousemove', handleInteraction);
    el.addEventListener('touchmove', handleInteraction, { passive: true });

    el.addEventListener('mouseenter', () => el.classList.add('animate'));
    el.addEventListener('mouseleave', () => el.classList.remove('animate'));
    el.addEventListener('touchstart', () => el.classList.add('animate'), { passive: true });
    el.addEventListener('touchend', () => el.classList.remove('animate'));
  });
</script>