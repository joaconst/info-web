<style>
  /* Estilos base para el efecto de onda */
  .wave-text {
    position: relative;
    display: inline-block;
    color: white; /* Texto base */
  }
  /* Pseudo-elemento que muestra el mismo contenido en color primary */
  .wave-text::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    color: var(--color-primary);
    /* Oculto inicialmente con un clip-path circular en 0% y desenfoque */
    clip-path: circle(0% at var(--mouse-x, 50%) var(--mouse-y, 50%));
    filter: blur(4px);
    pointer-events: none;
  }
  /* Al activarse la clase "animate", se dispara la animación de la onda */
  .wave-text.animate::after {
    animation: waveExpand 0.8s ease-out forwards;
  }
  /* Keyframes de la animación: la "onda" se expande suavemente desde el punto del mouse */
  @keyframes waveExpand {
    0% {
      clip-path: circle(0% at var(--mouse-x, 50%) var(--mouse-y, 50%));
      filter: blur(4px);
    }
    70% {
      clip-path: circle(150% at var(--mouse-x, 50%) var(--mouse-y, 50%));
      filter: blur(0);
    }
    100% {
      clip-path: circle(150% at var(--mouse-x, 50%) var(--mouse-y, 50%));
      filter: blur(0);
    }
  }
</style>
