<style>
  /* Estilos de la grid y las tarjetas */
  .flip-container {
    perspective: 1000px;
    transform-style: preserve-3d;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    height: 100%;
    will-change: transform;
  }

  /* Hover horizontal */
  .group:hover .flip-container {
    transform: rotateY(180deg);
  }

  .front,
  .back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    display: flex;
    transform-style: preserve-3d;
    transition: all 0.3s ease;
    box-sizing: border-box;
  }

  .back {
    transform: rotateY(180deg);
    background-color: #f0f9ff;
  }

  /* Animación automática vertical */
  @keyframes autoFlipVertical {
    0% {
      transform: rotateX(0);
    }
    25% {
      transform: rotateX(180deg);
    }
    75% {
      transform: rotateX(180deg);
    }
    100% {
      transform: rotateX(0);
    }
  }

  .animate-auto-flip-vertical {
    animation: autoFlipVertical 1.2s ease-in-out 1;
  }

  /* Clase adicional para animación vertical */
  .vertical-flip .back {
    transform: rotateX(180deg);
  }

  @media (max-width: 767px) {
    .flip-container {
      perspective: 600px;
    }
    .group:active .flip-container {
      transform: rotateY(180deg);
    }
    .front,
    .back {
      padding: 0.75rem;
      font-size: 0.875rem;
    }
  }

  @media (hover: hover) and (pointer: fine) {
    .group:hover .flip-container {
      transform: rotateY(180deg);
    }
  }

  [aria-hidden="true"] {
    user-select: none;
    -webkit-user-select: none;
  }

  .flip-container:focus-visible {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
</style>

