---
const steps = [
  { title: 'Paso 1', description: 'Descripción del paso 1' },
  { title: 'Paso 2', description: 'Descripción del paso 2' },
  { title: 'Paso 3', description: 'Descripción del paso 3' },
];
---
<section id="formatos" class="pl-0 lg:pl-64 bg-white">
  <div class="p-8 h-full flex flex-col justify-center">
    <h2 class="text-3xl lg:text-4xl font-bold text-primary mb-12" data-aos="fade-down">¿CÓMO TRABAJAMOS?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {steps.map((step, index) => (
        <div 
          class="bg-gray-100 p-6 rounded-lg transform hover:scale-105 transition-transform duration-300"
          data-aos="zoom-in"
          data-aos-delay={index * 200}
        >
          <h3 class="font-bold mb-2">{step.title}</h3>
          <p>{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>